<Page x:Class="CinemaServiceWork.Pages.NewDirectorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CinemaServiceWork.Pages"
      mc:Ignorable="d"
      d:DesignHeight="520"
      d:DesignWidth="600"
      Title="NewDirectorPage">

    <Border CornerRadius="10"
            Margin="10, 0 10, 0">
        <Border.Background>
            <ImageBrush ImageSource="/Images/Universe_VHS.jpg" />
        </Border.Background>

        <Border CornerRadius="10"
                Opacity="0.80"
                BorderThickness="2">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0, 0"
                                     EndPoint="1, 1">
                    <GradientStop Color="Aqua"
                                  Offset="0" />
                    <GradientStop Color="Firebrick"
                                  Offset="0.5" />
                    <GradientStop Color="BlueViolet"
                                  Offset="1" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0, 0"
                                     EndPoint="1, 1">
                    <GradientStop Color="Aqua"
                                  Offset="0" />
                    <GradientStop Color="BlueViolet"
                                  Offset="0.5" />
                </LinearGradientBrush>
            </Border.Background>

            <!-- Добавлен ScrollViewer здесь -->
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Margin="10">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="400" />
                        <ColumnDefinition Width="40" />
                        <ColumnDefinition Width="40" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Имя"
                               Style="{StaticResource addTextBlock}" />
                    <TextBlock Grid.Row="1"
                               Text="Фамилия"
                               Style="{StaticResource addTextBlock}" />
                    <TextBlock Grid.Row="2"
                               Text="Отчество"
                               Style="{StaticResource addTextBlock}" />
                    <TextBlock Grid.Row="4"
                               Text="Дата рождения"
                               Style="{StaticResource addTextBlock}" />
                    <TextBlock Grid.Row="3"
                               Text="Страна"
                               Style="{StaticResource addTextBlock}" />



                    <TextBox x:Name="txtName"
                             Grid.Row="0"
                             Grid.Column="1"
                             Style="{StaticResource addTextBox}" />
                    <TextBox x:Name="txtSurname"
                             Grid.Row="1"
                             Grid.Column="1"
                             Style="{StaticResource addTextBox}" />
                    <TextBox x:Name="txtPatronymic"
                             Grid.Row="2"
                             Grid.Column="1"
                             Style="{StaticResource addTextBox}" />
                    <DatePicker x:Name="dateBirthPicker"
                                Grid.Row="4"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                Margin="0,10"
                                Opacity="0.75"
                                VerticalAlignment="Center"
                                SelectedDateFormat="Long"
                                IsDropDownOpen="False" />
                    <ComboBox Grid.Row="3"
                              Grid.Column="1"
                              x:Name="listCountries"
                              ItemsSource="{Binding Countries}">

                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <Grid Grid.Column="1"
                          Grid.Row="7">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                    </Grid>

                    <Grid Grid.Column="1"
                          Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnClearDirector"
                                BorderThickness="0"
                                Content="Очистить"
                                Foreground="White"
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                Margin="0,10,0,0"
                                Click="btnClearDirector_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background"
                                            Value="#462AD8" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="#FFC02222" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="150"
                                            Height="40"
                                            CornerRadius="20"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="btnSaveDirector"
                                Grid.Column="1"
                                BorderThickness="0"
                                Content="Добавить режиссера"
                                Foreground="White"
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                Margin="0,10,0,0"
                                Click="btnAddDirector_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background"
                                            Value="#462AD8" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver"
                                                 Value="True">
                                            <Setter Property="Background"
                                                    Value="#FF67D167" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="150"
                                            Height="40"
                                            CornerRadius="20"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </Border>
</Page>