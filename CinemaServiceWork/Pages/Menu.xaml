<Page x:Class="CinemaServiceWork.Pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CinemaServiceWork.Pages"
      mc:Ignorable="d"
      d:DesignHeight="520"
      d:DesignWidth="200"
      Title="Menu">
    <Border CornerRadius="10"
            Margin="10, 0, 0, 0">

        <Border.Background>
            <ImageBrush ImageSource="/Images/Universe_VHS.jpg" />
        </Border.Background>

        <Border CornerRadius="10"
                Opacity="1">
            <Grid>
                <!-- Определяем строки для кнопок -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>

                <Button Content="Моя страница"
                        x:Name="myPageBtn"
                        Style="{StaticResource TextHighlightButtonStyle}"
                        Grid.Row="0"
                        Margin="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Click="MyPageFilmsBtn_Click"
                        Height="30" />

                <Button Content="Избранное"
                        x:Name="favoritesBtn"
                        Style="{StaticResource TextHighlightButtonStyle}"
                        Grid.Row="1"
                        Margin="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Height="30"
                        Click="FavoritesBtn_Click" />

                <Button Content="Форум"
                        x:Name="forumBtn"
                        Style="{StaticResource TextHighlightButtonStyle}"
                        Grid.Row="2"
                        Margin="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Height="30" />

                <Button Content="Добавить фильм"
                        x:Name="AddFilmBtn"
                        Style="{StaticResource TextHighlightButtonStyle}"
                        Grid.Row="3"
                        Margin="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Height="30"
                        Click="AddFilmBtn_Click" />

                <Button Content="Добавить актера"
                        x:Name="AddActorBtn"
                        Style="{StaticResource TextHighlightButtonStyle}"
                        Grid.Row="4"
                        Margin="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Height="30"
                        Click="AddActorBtn_Click" />

                <Button Content="Добавить режиссера"
                        x:Name="AddDirectorBtn"
                        Style="{StaticResource TextHighlightButtonStyle}"
                        Grid.Row="5"
                        Margin="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Height="30"
                        Click="AddDirectorBtn_Click" />

                <!-- Новая кнопка для QR-кода Кинопоиска -->
                <Button Content="Кинопоиск QR"
                        x:Name="kinopoiskQRBtn"
                        Style="{StaticResource TextHighlightButtonStyle}"
                        Grid.Row="6"
                        Margin="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Height="30"
                        Click="KinopoiskQRBtn_Click" />

                <Button Content="Выход"
                        x:Name="exitBtn"
                        Style="{StaticResource TextHighlightButtonStyle}"
                        Grid.Row="8"
                        Margin="10"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Height="30"
                        Click="ExitBtn_Click" />

                <!-- Попап для отображения QR-кода -->
                <Popup x:Name="qrCodePopup"
                       Grid.RowSpan="10"
                       Placement="Center"
                       StaysOpen="False"
                       Width="300"
                       Height="350">
                    <Popup.AllowsTransparency>
                        true
                    </Popup.AllowsTransparency>
                    <Border CornerRadius="10"
                            Opacity="0.95"
                            BorderThickness="2">

                        <Border.Background>
                            <LinearGradientBrush StartPoint="0, 0"
                                                 EndPoint="1, 1">
                                <GradientStop Color="Aqua"
                                              Offset="0" />
                                <GradientStop Color="BlueViolet"
                                              Offset="0.5" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <!-- Задаём сплошной фон для контента -->

                        <!-- Градиентная рамка -->
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0, 0"
                                                 EndPoint="1, 1">
                                <GradientStop Color="Aqua"
                                              Offset="0" />
                                <GradientStop Color="Firebrick"
                                              Offset="0.5" />
                                <GradientStop Color="BlueViolet"
                                              Offset="1" />
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="QR-код для Кинопоиска"
                                       HorizontalAlignment="Center"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Margin="0,0,0,10" />
                            <Image x:Name="kinopoiskQRImage"
                                   Width="200"
                                   Height="200"
                                   Stretch="Uniform"
                                   Margin="0,0,0,10" />
                            <TextBlock Text="Отсканируйте для перехода на Кинопоиск"
                                       HorizontalAlignment="Center"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,10" />
                            <Button Content="Закрыть"
                                    Width="100"                           
                                    HorizontalAlignment="Center"
                                    Click="CloseQRPopup_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background"
                                                Value="#462AD8" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver"
                                                     Value="True">
                                                <Setter Property="Background"
                                                        Value="#FF67D167" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Width="100"
                                                Height="40"
                                                CornerRadius="20"
                                                Background="{TemplateBinding Background}">
                                            <ContentPresenter VerticalAlignment="Center"
                                                              HorizontalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
        </Border>
    </Border>
</Page>