<Page x:Class="CinemaServiceWork.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:CinemaServiceWork.Pages"
      mc:Ignorable="d"
      d:DesignHeight="550"
      d:DesignWidth="800"
      Title="RegistrationPage">

    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/Universe_VHS.jpg" />
        </Border.Background>

        <Border CornerRadius="10"
                Opacity="0.80"
                BorderThickness="2">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0, 0"
                                     EndPoint="1, 1">
                    <GradientStop Color="Aqua"
                                  Offset="0" />
                    <GradientStop Color="Firebrick"
                                  Offset="0.5" />
                    <GradientStop Color="BlueViolet"
                                  Offset="1" />
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0, 0"
                                     EndPoint="1, 1">
                    <GradientStop Color="Aqua"
                                  Offset="0" />
                    <GradientStop Color="BlueViolet"
                                  Offset="0.5" />
                </LinearGradientBrush>
            </Border.Background>

            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Имя"
                           Style="{StaticResource regTextBlock}" />
                <TextBlock Grid.Row="1"
                           Text="Фамилия"
                           Style="{StaticResource regTextBlock}" />
                <TextBlock Grid.Row="2"
                           Text="Ник"
                           Style="{StaticResource regTextBlock}" />
                <TextBlock Grid.Row="3"
                           Text="Почта"
                           Style="{StaticResource regTextBlock}" />
                <TextBlock Grid.Row="4"
                           Text="Пароль"
                           Style="{StaticResource regTextBlock}" />
                <TextBlock Grid.Row="5"
                           Text="Повторите пароль"
                           Style="{StaticResource regTextBlock}" />
                <TextBlock Grid.Row="6"
                           Text="Дата рождения"
                           Style="{StaticResource regTextBlock}" />

                <TextBox x:Name="txtName"
                         Grid.Row="0"
                         Grid.Column="1"
                         Style="{StaticResource regTextBox}"
                         TextChanged="txtName_TextChanged" />
                <TextBox x:Name="txtSurname"
                         Grid.Row="1"
                         Grid.Column="1"
                         Style="{StaticResource regTextBox}" />
                <TextBox x:Name="txtNickName"
                         Grid.Row="2"
                         Grid.Column="1"
                         Style="{StaticResource regTextBox}"
                         TextChanged="txtNickName_TextChanged" />
                <TextBox x:Name="txtEmail"
                         Grid.Row="3"
                         Grid.Column="1"
                         Style="{StaticResource regTextBox}"
                         TextChanged="txtEmail_TextChanged" />
                <PasswordBox x:Name="txtPassword"
                             Grid.Row="4"
                             Grid.Column="1"
                             Style="{StaticResource regPassBox}"
                             PasswordChanged="txtPassword_PasswordChanged" />
                <TextBox x:Name="txtPasswordHide"
                         Grid.Row="4"
                         Grid.Column="1"
                         Style="{StaticResource regTextBox}"
                         Visibility="Collapsed" />
                <PasswordBox x:Name="txtRptPassword"
                             Grid.Row="5"
                             Grid.Column="1"
                             Style="{StaticResource regPassBox}"
                             PasswordChanged="txtRptPassword_PasswordChanged" />
                <TextBox x:Name="txtRptPasswordHide"
                         Grid.Row="5"
                         Grid.Column="1"
                         Style="{StaticResource regTextBox}"
                         Visibility="Collapsed" />
                <DatePicker x:Name="datePicker"
                            Grid.Row="6"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            Margin="0,10"
                            Opacity="0.75"
                            VerticalAlignment="Center"
                            SelectedDateFormat="Long"
                            IsDropDownOpen="False"
                            DateValidationError="datePicker_DateValidationError"
                            DataContextChanged="datePicker_DataContextChanged"
                            SelectedDateChanged="datePicker_SelectedDateChanged_1" />

                <Button Grid.Row="4"
                        x:Name="eyeBtn"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        ToolTip="Отобразить пароль"
                        Grid.Column="2"
                        BorderBrush="Transparent"
                        Background="Transparent"
                        Click="eyeBtn_Click"
                        Margin="0,0,0,10">
                    <Image Source="/Images/Buttons/eye.png"
                           Height="35"
                           Width="35" />
                </Button>

                <Button Grid.Row="4"
                        x:Name="eyeBtnDis"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        ToolTip="Спрятать пароль"
                        Grid.Column="2"
                        BorderBrush="Transparent"
                        Background="Transparent"
                        Margin="0,0,0,10"
                        Visibility="Collapsed"
                        Click="eyeBtnDis_Click">
                    <Image Source="/Images/Buttons/unseen.png"
                           Height="35"
                           Width="35" />
                </Button>

                <Grid Grid.Column="1"
                      Grid.Row="7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnBack"
                            BorderThickness="0"
                            Content="Назад"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="0,10,0,0"
                            Click="btnBack_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background"
                                        Value="#462AD8" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#FFC02222" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150"
                                        Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnRegistration"
                            Grid.Column="1"
                            BorderThickness="0"
                            Content="Зарегистрироваться"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Margin="0,10,0,0"
                            Click="btnRegistration_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background"
                                        Value="#462AD8" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver"
                                             Value="True">
                                        <Setter Property="Background"
                                                Value="#FF67D167" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="150"
                                        Height="40"
                                        CornerRadius="20"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Page>